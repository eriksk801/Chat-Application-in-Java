    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        String result="";
        int listItem= jComboBox1.getSelectedIndex();
        System.out.println(listItem);
         try{
        Registry reg = LocateRegistry.getRegistry("localhost", 1099);
        ServerInterface rmi = (ServerInterface) reg.lookup("server"); 
       
        
        double a=Double.parseDouble(jTextField1.getText());
        double b=Double.parseDouble(jTextField2.getText());
        
        switch(listItem){
        case 0: 
                result=String.valueOf(rmi.sum(a,b));
                break;
        case 1: 
                result=String.valueOf(rmi.substrac(a,b));
                break;
        case 2:
                result=String.valueOf(rmi.multiply(a,b));
                break;
        case 3:
                result=String.valueOf(rmi.divide(a,b));
                break;
        }
        
      
        jTextField3.setText(result);
       
         
        }
        catch(Exception e){
            System.out.println(e);
        }

    }                                        

